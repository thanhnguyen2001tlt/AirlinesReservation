@{
    ViewBag.Title = "Manage Emloyee";
    Layout = "~/Views/Shared/_myLayout.cshtml";
}
@Html.Raw(TempData["mes"])
<div class="container-fluid">
    <div class="row page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active"><a href="~/admin/index">Admin</a></li>
            <li class="breadcrumb-item"><a href="">Manage Flights</a></li>
        </ol>
    </div>
    <div class="card-header d-flex justify-content-between">
        <div> <h4 class="card-title">Manage Emloyee</h4></div>>
        <button type="button" class="btn btn-rounded btn-success pull-right" data-bs-toggle="modal" data-bs-target=".bd-example-modal-lg">
            <span class="btn-icon-start text-info">
                <i class="fa fa-plus color-info"></i>
            </span>Add
        </button>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example3" class="display" style="min-width: 845px">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Employee id</th>
                                <th>Full name</th>
                                <th>User name</th>
                                <th>Password</th>
                                <th>Email</th>
                                <th>Age</th>
                                <th>Sex</th>
                                <th>Address</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var em in ViewBag.Emloyee)
                            {
                                if (em.Roles != 1)
                                {
                                    <tr>
                                        @{
                                            string linkimg = "/img/default.jpg";
                                            if (@em.Img != "")
                                            {

                                                linkimg = "/img/" + @em.Img;
                                            }
                                            string Sex = "";
                                            switch (@em.Sex)
                                            {
                                                case 0:
                                                    Sex = "Nam";
                                                    break;
                                                case 1:
                                                    Sex = "Nữ";
                                                    break;
                                            }

                                        }
                                        <td><img class="rounded-circle" width="50" height="50" src="@linkimg" alt=""></td>
                                        <td>@em.Employee_id</td>
                                        <td>@em.Full_name</td>
                                        <td>@em.User_name</td>
                                        <td>@em.User_name</td>
                                        <td>@em.Email</td>
                                        <td>@em.Age</td>
                                        <td>Sex</td>
                                        <td>@em.Address</td>
                                        <td>
                                            <div class="d-flex">
                                                @Html.ActionLink("Edit", "Edit", new { id = em.Employee_id }, new { @class = "btn btn-primary shadow btn-xs sharp me-1 fas fa-pencil-alt" })
                                                @Html.ActionLink("Delete", "Delete", new { id = em.Employee_id }, new { @class = "btn btn-primary shadow btn-xs sharp me-1 fa fa-trash" })
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



